        <ComboBox Name="portsComboBox" SelectedValue="{Binding Port, Mode=TwoWay}" HorizontalAlignment="Left" Margin="82,84,0,0" VerticalAlignment="Top" Width="120"/>
        <StackPanel  Visibility="{Binding Status, Converter=BooleanToVisibilityConverter}" HorizontalAlignment="Left" Margin="116,10,0,0" VerticalAlignment="Top" Orientation="Horizontal">
            <TextBlock HorizontalAlignment="Left" Height="16" Margin="0" TextWrapping="Wrap" Text="Connected" VerticalAlignment="Top"/>
            <Path Stretch="Fill" StrokeThickness="1" StrokeLineJoin="Round" Stroke="#FF000000" Fill="#FF61CC61" Data="F1 M 274.316,158.702L 277.5,161.643L 269.843,170.654L 267.022,173.974L 263.838,171.033L 258.758,166.341L 261.579,163.022L 266.659,167.713L 274.316,158.702 Z " HorizontalAlignment="Left" Width="18.742" Height="15.271" VerticalAlignment="Top" Margin="10,0,0,0"/>
